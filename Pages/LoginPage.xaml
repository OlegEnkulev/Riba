<Page x:Class="Riba.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Riba.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Вход" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Логин" Width="100" FontSize="14"/>
            <TextBox x:Name="LoginBox"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Пароль" Width="100" FontSize="14"/>
            <PasswordBox x:Name="PassBox"/>
        </StackPanel>
        <Button Content="Войти" x:Name="LoginBTN" Click="LoginBTN_Click"/>
        <Button Content="Назад" x:Name="BackBTN" Click="BackBTN_Click"/>
    </StackPanel>
</Page>
