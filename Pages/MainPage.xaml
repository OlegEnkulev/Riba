<Page x:Class="Riba.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Riba.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="10">
            <Image Source="/Images/logo.png" Width="100" Height="100" VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center">
                <Label Content="ООО «Рыбалка»" FontSize="20" HorizontalAlignment="Center"/>
                <Label Content="магазин по продаже товаров для рыбалки в Абакане." FontSize="14" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Margin="10">
            <Label Content="Войти как:" FontSize="14" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" >
                <Button Content="Гость" x:Name="GuestBTN" Click="GuestBTN_Click"/>
                <Button Content="Пользователь" x:Name="UserBTN" Click="UserBTN_Click"/>
            </StackPanel>
            </StackPanel>
    </StackPanel>
</Page>
