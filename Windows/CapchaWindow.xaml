<Window x:Class="Riba.Windows.CapchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Riba.Windows"
        mc:Ignorable="d"
        Title="CapchaWindow" Height="350" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="/Images/Capcha.png" Width="200" Margin="5"/>
        <TextBox x:Name="CapchaBox" Margin="5"/>
        <Button x:Name="SubmitBTN" Content="Подтвердить" Click="SubmitBTN_Click"/>
    </StackPanel>
</Window>
